extends layout


block content

    h1 #{title}
    form(action="/articles/add", method="post")
        #input-group
            label Title:
            input.form-control(type="text", name='title')
        #input-group
            label Author:
            input.form-control(type="text", name='author')
        #input-group
            label Body:
            textarea.form-control(name="body", cols="25", rows="10")
        input.btn.btn-primary.my-2(type="submit", value="Submit")