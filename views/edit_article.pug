extends layout


block content

    h1 #{title}
    form(action=`/article/edit/${article._id}` method="post")
        #input-group
            label Title:
            input.form-control(type="text", name='title', value=article.title)
        #input-group
            label Author:
            input.form-control(type="text", name='author', value=article.author)
        #input-group
            label Body:
            textarea.form-control(name="body", cols="30", rows="10")=article.body
        input.btn.btn-primary.my-2(type="submit", value="Submit")
        